            <class name="tests.US_004_TC_001"></class>
            <class name="tests.US_005_TC_001"></class>
            <class name="tests.US_007_TC_001"></class>
            <class name="tests.US_008_TC_001"></class>
            <class name="tests.US_010_TC_001"></class>
        </classes>
    </test>
</suite>